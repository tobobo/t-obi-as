{{!< layout.hbs }}
<div class="{{page.metadata.slug}}">

  {{#with page}}
    <h1>{{title}}</h1>
    <h3>{{metadata.subheading}}</h3>
    <div class="content">
      {{{html}}}
    </div>
  {{/with}}

  <h2>Web</h2>
  {{#list env contents listName='web' sort='date' sortDescending='true'}}
    {{> web-list-item}}
  {{/list}}

  <h2>Music</h2>
  {{#list env contents listName='music' sort='date' sortDescending='true'}}
    {{> music-list-item}}
  {{/list}}

</div>
